<UserControl x:Class="Romanesco.Host2.Views.LayerTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Romanesco.Host2.Views"
             xmlns:m="clr-namespace:Romanesco.DataModel.Entities;assembly=Romanesco.DataModel"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
  <d:UserControl.DataContext>
    <m:IntModel Title="Title"/>
  </d:UserControl.DataContext>

  <Grid Background="SteelBlue" Margin="4">
    <TextBlock Text="{Binding Title}" Foreground="White" VerticalAlignment="Center" Margin="2"/>
  </Grid>
</UserControl>
