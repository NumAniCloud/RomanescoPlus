<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Romanesco.Host2.ViewModels"
                    x:Class="Romanesco.Host2.Views.EditorTemplates"
                    xmlns:v="clr-namespace:Romanesco.Host2.Views">

    <DataTemplate DataType="{x:Type vm:IntViewModel}" x:Key="IntData">
        <Grid VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Title" Width="Auto"/>
                <ColumnDefinition SharedSizeGroup="Colon" Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="{Binding Title}" HorizontalAlignment="Right"/>
            <Label Content=":" Grid.Column="1"/>
            <TextBox Text="{Binding Data.Value}" Grid.Column="2" VerticalContentAlignment="Center"
                     Margin="3" Padding="2" Height="25"/>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ClassViewModel}" x:Key="ClassData">
        <v:ClassBlock DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:NoneViewModel}" x:Key="NoneData">
        <Grid></Grid>
    </DataTemplate>

    <v:DataModelTemplateSelector x:Key="TemplateSelector">
        <v:DataModelTemplateSelector.DefaultInlineTemplates>
            <v:DataTemplateEntry Priority="0" DataTemplate="{StaticResource IntData}"/>
            <v:DataTemplateEntry Priority="0" DataTemplate="{StaticResource ClassData}"/>
            <v:DataTemplateEntry Priority="0" DataTemplate="{StaticResource NoneData}"/>
        </v:DataModelTemplateSelector.DefaultInlineTemplates>
    </v:DataModelTemplateSelector>

</ResourceDictionary>